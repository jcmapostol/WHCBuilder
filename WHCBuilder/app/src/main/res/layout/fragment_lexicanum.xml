<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_lex"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.55">

            <TextView
                android:background="@color/colorWhite"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:id="@+id/fragment_lex_alttext"
                android:textColor="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:background="@color/colorWhite"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:id="@+id/fragment_lex_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>

        <LinearLayout
            android:visibility="invisible"
            android:gravity="center_vertical"
            android:background="@color/colorWhite"
            android:id="@+id/fragment_lex_squad"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.45">

            <ImageView
                android:id="@+id/fragment_lex_squad_back"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:src="@drawable/icon_back"/>

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:background="@color/colorWhite"
                    android:id="@+id/fragment_lex_squad_image"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="0.9"
                    android:src="@drawable/legions1"/>

                <TextView
                    android:id="@+id/fragment_lex_squad_quantity"
                    android:background="@color/colorWhite"
                    android:layout_width="match_parent"
                    android:textAlignment="center"
                    android:layout_height="0dp"
                    android:layout_weight="0.1"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="@dimen/standard_text_size"
                    android:text="4x" />
            </LinearLayout>


            <ImageView
                android:id="@+id/fragment_lex_squad_forward"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:src="@drawable/icon_forward"/>
        </LinearLayout>
    </LinearLayout>

    <fragment
        android:layout_gravity="end"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:name="com.tests.apostol.testapp.LexicanumDrawer"
        app:layout="@layout/drawer_lex"
        tools:layout="@layout/drawer_lex" />
</android.support.v4.widget.DrawerLayout>